<%- include('../partials/header') %>

<div class="container-fluid mt-4">
  <div class="row">
    <%- include('../partials/sidebar') %>
    
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Record New Attendance</h1>
      </div>
      
      <% if (locals.error) { %>
        <div class="alert alert-danger" role="alert">
          <%= error %>
        </div>
      <% } %>
      
      <div class="card mb-4">
        <div class="card-body">
          <form action="/attendance" method="POST">
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="courseCode" class="form-label">Course Code</label>
                <select class="form-select" id="courseCode" name="courseCode" required>
                  <option value="SIT317">SIT317</option>
                  <option value="SIT323">SIT323</option>
                  <option value="SIT374">SIT374</option>
                  <option value="SIT305">SIT305</option>
                </select>
              </div>
              
              <div class="col-md-6 mb-3">
                <label for="courseName" class="form-label">Course Name</label>
                <input type="text" class="form-control" id="courseName" name="courseName" required>
              </div>
            </div>
            
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="date" class="form-label">Date (YYYY-MM-DD)</label>
                <input type="text" class="form-control" id="date" name="date" placeholder="e.g. 2025-05-15" required>
              </div>
              
              <div class="col-md-6 mb-3">
                <label for="status" class="form-label">Status</label>
                <select class="form-select" id="status" name="status" required>
                  <option value="PRESENT" selected>Present</option>
                  <option value="LATE">Late</option>
                  <option value="ABSENT">Absent</option>
                </select>
              </div>
            </div>
            
            <div class="mb-3">
              <label for="remarks" class="form-label">Remarks</label>
              <textarea class="form-control" id="remarks" name="remarks" rows="3"></textarea>
            </div>
            
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
              <a href="/attendance" class="btn btn-secondary me-md-2">Cancel</a>
              <button type="submit" class="btn btn-primary">Record Attendance</button>
            </div>
          </form>
        </div>
      </div>
    </main>
  </div>
</div>

<%- include('../partials/footer') %> 