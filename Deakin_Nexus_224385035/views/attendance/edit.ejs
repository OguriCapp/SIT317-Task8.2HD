<%- include('../partials/header') %>

<div class="container-fluid mt-4">
  <div class="row">
    <%- include('../partials/sidebar') %>
    
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Edit Attendance Record</h1>
      </div>
      
      <% if (locals.error) { %>
        <div class="alert alert-danger" role="alert">
          <%= error %>
        </div>
      <% } %>
      
      <div class="card mb-4">
        <div class="card-body">
          <form action="/attendance/<%= attendance.id %>?_method=PUT" method="POST">
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="courseCode" class="form-label">Course Code</label>
                <select class="form-select" id="courseCode" name="courseCode" required>
                  <option value="SIT317" <%= attendance.courseCode === 'SIT317' ? 'selected' : '' %>>SIT317</option>
                  <option value="SIT323" <%= attendance.courseCode === 'SIT323' ? 'selected' : '' %>>SIT323</option>
                  <option value="SIT374" <%= attendance.courseCode === 'SIT374' ? 'selected' : '' %>>SIT374</option>
                  <option value="SIT305" <%= attendance.courseCode === 'SIT305' ? 'selected' : '' %>>SIT305</option>
                </select>
              </div>
              
              <div class="col-md-6 mb-3">
                <label for="courseName" class="form-label">Course Name</label>
                <input type="text" class="form-control" id="courseName" name="courseName" value="<%= attendance.courseName %>" required>
              </div>
            </div>
            
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="date" class="form-label">Date (YYYY-MM-DD)</label>
                <input type="text" class="form-control" id="date" name="date" value="<%= attendance.date ? attendance.date.substring(0, 10) : '' %>" placeholder="e.g. 2025-05-15" required>
              </div>
              
              <div class="col-md-6 mb-3">
                <label for="status" class="form-label">Status</label>
                <select class="form-select" id="status" name="status" required>
                  <option value="PRESENT" <%= attendance.status === 'PRESENT' ? 'selected' : '' %>>Present</option>
                  <option value="LATE" <%= attendance.status === 'LATE' ? 'selected' : '' %>>Late</option>
                  <option value="ABSENT" <%= attendance.status === 'ABSENT' ? 'selected' : '' %>>Absent</option>
                </select>
              </div>
            </div>
            
            <div class="mb-3">
              <label for="remarks" class="form-label">Remarks</label>
              <textarea class="form-control" id="remarks" name="remarks" rows="3"><%= attendance.remarks || '' %></textarea>
            </div>
            
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
              <a href="/attendance/<%= attendance.id %>" class="btn btn-secondary me-md-2">Cancel</a>
              <button type="submit" class="btn btn-primary">Update Attendance</button>
            </div>
          </form>
        </div>
      </div>
    </main>
  </div>
</div>

<%- include('../partials/footer') %> 