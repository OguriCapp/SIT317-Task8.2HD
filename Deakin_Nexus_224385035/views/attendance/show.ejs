<%- include('../partials/header') %>

<div class="container-fluid mt-4">
  <div class="row">
    <%- include('../partials/sidebar') %>
    
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2"><%= attendance.courseCode %> Attendance</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
          <a href="/attendance/<%= attendance.id %>/edit" class="btn btn-sm btn-outline-secondary me-2">
            <i class="fas fa-edit me-1"></i> Edit
          </a>
          <form action="/attendance/<%= attendance.id %>?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this attendance record?')">
              <i class="fas fa-trash me-1"></i> Delete
            </button>
          </form>
        </div>
      </div>
      
      <div class="card mb-4">
        <div class="card-body">
          <div class="row mb-3">
            <div class="col-md-3">
              <strong>Course Code:</strong>
            </div>
            <div class="col-md-9">
              <%= attendance.courseCode %>
            </div>
          </div>
          
          <div class="row mb-3">
            <div class="col-md-3">
              <strong>Course Name:</strong>
            </div>
            <div class="col-md-9">
              <%= attendance.courseName %>
            </div>
          </div>
          
          <div class="row mb-3">
            <div class="col-md-3">
              <strong>Date:</strong>
            </div>
            <div class="col-md-9">
              <%= new Date(attendance.date).toLocaleDateString() %>
            </div>
          </div>
          
          <div class="row mb-3">
            <div class="col-md-3">
              <strong>Status:</strong>
            </div>
            <div class="col-md-9">
              <span class="text-<%= attendance.status === 'PRESENT' ? 'success' : (attendance.status === 'LATE' ? 'warning' : 'danger') %>">
                <%= attendance.status %>
              </span>
            </div>
          </div>
          
          <div class="row mb-3">
            <div class="col-md-3">
              <strong>Remarks:</strong>
            </div>
            <div class="col-md-9">
              <%= attendance.remarks || 'No remarks provided' %>
            </div>
          </div>
          
          <div class="row mb-3">
            <div class="col-md-3">
              <strong>Created:</strong>
            </div>
            <div class="col-md-9">
              <%= new Date(attendance.createdAt).toLocaleString() %>
            </div>
          </div>
          
          <div class="mt-4">
            <a href="/attendance" class="btn btn-secondary">Back to Attendance Records</a>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>

<%- include('../partials/footer') %> 