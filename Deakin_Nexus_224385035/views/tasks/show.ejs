<%- include('../partials/header') %>

<div class="container-fluid mt-4">
  <div class="row">
    <%- include('../partials/sidebar') %>
    
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2"><%= task.title %></h1>
        <div class="btn-toolbar mb-2 mb-md-0">
          <a href="/tasks/<%= task.id %>/edit" class="btn btn-sm btn-outline-secondary me-2">
            <i class="fas fa-edit me-1"></i> Edit
          </a>
          <form action="/tasks/<%= task.id %>?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this task?')">
              <i class="fas fa-trash me-1"></i> Delete
            </button>
          </form>
        </div>
      </div>
      
      <div class="card mb-4">
        <div class="card-body">
          <div class="row mb-3">
            <div class="col-md-3">
              <strong>Description:</strong>
            </div>
            <div class="col-md-9">
              <%= task.description || 'No description provided' %>
            </div>
          </div>
          
          <div class="row mb-3">
            <div class="col-md-3">
              <strong>Due Date:</strong>
            </div>
            <div class="col-md-9">
              <%= new Date(task.dueDate).toLocaleDateString() %>
            </div>
          </div>
          
          <div class="row mb-3">
            <div class="col-md-3">
              <strong>Priority:</strong>
            </div>
            <div class="col-md-9">
              <span class="text-<%= task.priority === 'HIGH' ? 'danger' : (task.priority === 'MEDIUM' ? 'warning' : (task.priority === 'URGENT' ? 'dark' : 'info')) %>">
                <%= task.priority %>
              </span>
            </div>
          </div>
          
          <div class="row mb-3">
            <div class="col-md-3">
              <strong>Status:</strong>
            </div>
            <div class="col-md-9">
              <span class="text-<%= task.status === 'TODO' ? 'secondary' : (task.status === 'IN_PROGRESS' ? 'primary' : (task.status === 'REVIEW' ? 'info' : 'success')) %>">
                <%= task.status %>
              </span>
            </div>
          </div>
          
          <div class="row mb-3">
            <div class="col-md-3">
              <strong>Progress:</strong>
            </div>
            <div class="col-md-9">
              <%= task.progress %>%
            </div>
          </div>
          
          <div class="row mb-3">
            <div class="col-md-3">
              <strong>Course:</strong>
            </div>
            <div class="col-md-9">
              <%= task.course || 'Not specified' %>
            </div>
          </div>
          
          <div class="row mb-3">
            <div class="col-md-3">
              <strong>Created:</strong>
            </div>
            <div class="col-md-9">
              <%= new Date(task.createdAt).toLocaleString() %>
            </div>
          </div>
          
          <% if (task.updatedAt) { %>
          <div class="row mb-3">
            <div class="col-md-3">
              <strong>Last Updated:</strong>
            </div>
            <div class="col-md-9">
              <%= new Date(task.updatedAt).toLocaleString() %>
            </div>
          </div>
          <% } %>
          
          <div class="mt-4">
            <a href="/tasks" class="btn btn-secondary">Back to Tasks</a>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>

<%- include('../partials/footer') %> 