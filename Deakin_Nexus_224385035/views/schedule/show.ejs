<%- include('../partials/header') %>

<div class="container-fluid mt-4">
  <div class="row">
    <%- include('../partials/sidebar') %>
    
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2"><%= schedule.courseCode %> Schedule</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
          <a href="/schedule/<%= schedule.id %>/edit" class="btn btn-sm btn-outline-secondary me-2">
            <i class="fas fa-edit me-1"></i> Edit
          </a>
          <form action="/schedule/<%= schedule.id %>?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this schedule?')">
              <i class="fas fa-trash me-1"></i> Delete
            </button>
          </form>
        </div>
      </div>
      
      <div class="card mb-4">
        <div class="card-body">
          <div class="row mb-3">
            <div class="col-md-3">
              <strong>Course Code:</strong>
            </div>
            <div class="col-md-9">
              <%= schedule.courseCode %>
            </div>
          </div>
          
          <div class="row mb-3">
            <div class="col-md-3">
              <strong>Course Name:</strong>
            </div>
            <div class="col-md-9">
              <%= schedule.courseName %>
            </div>
          </div>
          
          <div class="row mb-3">
            <div class="col-md-3">
              <strong>Day of Week:</strong>
            </div>
            <div class="col-md-9">
              <%= schedule.dayOfWeek %>
            </div>
          </div>
          
          <div class="row mb-3">
            <div class="col-md-3">
              <strong>Time:</strong>
            </div>
            <div class="col-md-9">
              <%= schedule.startTime %> - <%= schedule.endTime %>
            </div>
          </div>
          
          <div class="row mb-3">
            <div class="col-md-3">
              <strong>Location:</strong>
            </div>
            <div class="col-md-9">
              <%= schedule.location || 'Not specified' %>
            </div>
          </div>
          
          <% if (schedule.notes) { %>
          <div class="row mb-3">
            <div class="col-md-3">
              <strong>Notes:</strong>
            </div>
            <div class="col-md-9">
              <%= schedule.notes %>
            </div>
          </div>
          <% } %>
          
          <div class="row mb-3">
            <div class="col-md-3">
              <strong>Created:</strong>
            </div>
            <div class="col-md-9">
              <%= new Date(schedule.createdAt).toLocaleString() %>
            </div>
          </div>
          
          <div class="mt-4">
            <a href="/schedule" class="btn btn-secondary">Back to Schedule</a>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>

<%- include('../partials/footer') %> 